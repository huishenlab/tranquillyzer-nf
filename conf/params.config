params {
  samplesheet = './tests/samplesheet.txt'
  outdir      = './tests/results'

  // Reference files 
  reference          = './tests/references/hg38_gencode_chr21.fa'
  gtf                = '/varidata/research/projects/shen/references/gtf_files/gencode.v30.annotation.gtf'

  // base_qual flag
  output_bquals      = false
  output_fastq       = false

  // Model
  model_name         = '10x3p_sc_ont_011'
  seq_order_file     = ''
  model_type         = 'CRF'
  chunk_size         = 300_000
  bc_lv_threshold    = 1
  gpu_mem            = 48

  // Resources
  preprocess_cpus    = 32
  annotate_cpus      = 32
  align_cpus         = 32
  dedup_cpus         = 16
  max_open_cb_writers= 64
  bucket_threads     = 2
  merge_threads      = 2

  // Steps toggles
  split_bam          = true
  featurecounts      = true

  featurecounts_threads    = 16
  featurecounts_batch_size = 200
  featurecounts_extra      = "-g gene_id -t exon -s 1"

  // Container image (can be overridden in profiles/CLI)
  // container_trq      = '/path/to/tranquillyzer_v0.2.0_tf2.15.1.sif'
  container_trq           = 'docker://varishenlab/tranquillyzer:tranquillyzer_v0.2.0_tf_2.15.1'
  container_subread       = 'https://depot.galaxyproject.org/singularity/subread:2.0.6--he4a0461_2'
}