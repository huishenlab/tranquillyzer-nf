/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Shared parameters
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

includeConfig 'conf/params.config'

env {
  // keep Apptainer from using $HOME for pulls/build cache
  APPTAINER_CACHEDIR = "$baseDir/.apptainer_cache"
  APPTAINER_TMPDIR   = "$baseDir/.apptainer_tmp"
  SINGULARITY_CACHEDIR = "$baseDir/.apptainer_cache"
  SINGULARITY_TMPDIR   = "$baseDir/.apptainer_tmp"

  // avoid requiring nvidia-container-cli (your cluster doesn't have it)
  APPTAINER_NVCCLI   = "0"

  // optional: avoid matplotlib/fontconfig writing to $HOME inside container
  MPLCONFIGDIR       = "/tmp/mpl"
  XDG_CACHE_HOME     = "/tmp/xdg"
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Execution profiles
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

profiles {

  // =========================
  // 1) Local + Docker (CPU)
  // =========================
  docker_local_cpu {

    process {
      executor  = 'local'
      container = params.container_trq

      // Use subread container only for featureCounts step
      withName: 'TRANQUILLYZER_PIPELINE:FEATURECOUNTS_MTX' {
        container = params.container_subread
      }

      // Ensure no GPU options for CPU profile
      containerOptions = ''
    }

    docker {
      enabled = true
    }
  }

  // =========================
  // 2) Local + Docker (GPU)
  // =========================
  docker_local {

    process {
      executor  = 'local'
      container = params.container_trq

      // Use subread container only for featureCounts step (no GPUs needed)
      withName: 'TRANQUILLYZER_PIPELINE:FEATURECOUNTS_MTX' {
        container        = params.container_subread
        containerOptions = ''
      }

      // GPU only for processes labeled 'gpu'
      withLabel: 'gpu' {
        accelerator      = 1
        containerOptions = '--gpus all'
      }

      // Explicitly ensure CPU-labeled processes don't get GPU options
      withLabel: 'cpu' {
        containerOptions = ''
      }
    }

    docker {
      enabled = true
    }
  }

  // =========================
  // 3) Local + Singularity/Apptainer
  // =========================
  singularity_local {

    process {
      executor  = 'local'
      container = params.container_trq

      // Use subread container only for featureCounts step
      withName: 'TRANQUILLYZER_PIPELINE:FEATURECOUNTS_MTX' {
        container        = params.container_subread
        containerOptions = ''   // important: don't add --nv here
      }

      // GPU only for processes labeled 'gpu'
      withLabel: 'gpu' {
        // accelerator      = 1
        containerOptions = '--nv'
      }

      // CPU-labeled processes do not get --nv
      withLabel: 'cpu' {
        containerOptions = ''
      }
    }

    singularity {
      enabled    = false
      autoMounts = true
      cacheDir   = params.image_dir
    }
    apptainer {
      enabled   = true
      autoMounts = true
      cacheDir  = params.image_dir
    }
  }

  // =========================
  // 4) Slurm + Singularity
  // =========================
  singularity_slurm {

    process {
      executor  = 'slurm'
      queue     = 'shen'

      time     = '48h'
      cpus     = 64
      container = params.container_trq

      // Use subread container only for featureCounts step
      withName: 'TRANQUILLYZER_PIPELINE:FEATURECOUNTS_MTX' {
        container        = params.container_subread
        containerOptions = ''
      }

      // GPU-aware processes
      withLabel: 'gpu' {
        // accelerator      = 4
        time             = '48h'
        containerOptions = '--nv'
      }

      // CPU-labeled processes do not get --nv
      withLabel: 'cpu' {
        time             = '48h'
        cpus             = 64
        containerOptions = ''
      }
    }

    singularity {
      enabled    = false
      autoMounts = true
      cacheDir   = params.image_dir
    }
    apptainer {
      enabled    = true
      autoMounts = true
      cacheDir   = params.image_dir
    }
  }
}

/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Output reports
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

trace {
  enabled   = true
  file      = "${params.outdir}/pipeline_info/execution_trace.tsv"
  sep       = '\t'
  fields    = 'tag,task_id,process,status,exit,submit,start,complete,realtime,%cpu,cpus,peak_rss,peak_vmem'
  overwrite = true
}

report {
  enabled   = true
  file      = "${params.outdir}/pipeline_info/execution_report.html"
  overwrite = true
}

timeline {
  enabled   = true
  file      = "${params.outdir}/pipeline_info/execution_timeline.html"
  overwrite = true
}

dag {
  enabled   = true
  file      = "${params.outdir}/pipeline_info/pipeline_dag.svg"
  overwrite = true
}